<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net http://dozer.sourceforge.net/schema/beanmapping.xsd">

    
    <mapping>
        <class-a>co.com.miempresa.entities.Categoria</class-a>
        <class-b>co.com.miempresa.dto.CategoriaDTO</class-b>
        <field>
            <a>catId</a>
            <b>id</b>
        </field>
        <field>
            <a>catCod</a>
            <b>codigo</b>
        </field>
        <field>
            <a>catDesc</a>
            <b>descripcion</b>
        </field>
    </mapping>
    
    <!--Maping tipos de certficado-->
    <mapping>
        <class-a>co.com.miempresa.entities.User</class-a>
        <class-b>co.com.miempresa.dto.UsuarioDTO</class-b>
        <field>
            <a>userId</a>
            <b>id</b>
        </field>
        <field>
            <a>userName</a>
            <b>name</b>
        </field>
        <field>
            <a>userEmail</a>
            <b>email</b>
        </field>
    </mapping>

    <mapping>
        <class-a>co.com.miempresa.entities.Producto</class-a>
        <class-b>co.com.miempresa.dto.ProductoDTO</class-b>
        <field>
            <a>productId</a>
            <b>id</b>
        </field>
        <field>
            <a>productCode</a>
            <b>code</b>
        </field>
        <field>
            <a>productDecription</a>
            <b>decription</b>
        </field>
        <field>
            <a>productPrecio</a>
            <b>precio</b>
        </field>
        <field>
            <a>productCantidad</a>
            <b>cantidad</b>
        </field>
        <field>
            <a>productEstado</a>
            <b>estado</b>
        </field>
        <field>
            <a>user</a>
            <b>userreg</b>
        </field>
        <field>
            <a>userUpdate</a>
            <b>useract</b>
        </field>
        <field>
            <a>productFreg</a>
            <b date-format="dd/MM/yyyy">freg</b>
        </field>
         <field>
            <a>productFact</a>
            <b date-format="dd/MM/yyyy">fact</b>
        </field>
        <field>
            <a>categoria</a>
            <b>categoria</b>
        </field>
    </mapping>
    
    
</mappings>